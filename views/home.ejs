<%- include partials/head %>

<body>
<%- include('partials/header', {user: user}) %>

<div class="container-fluid">

    <div class="row parallax-chart">

        <div class="col-md-12 slider-text">
            <div class="row">
                <div class="col-xs-8 col-xs-offset-2">
                    <form class="input-group search" action="/search" method="GET" data-spy="affix" data-offset-top="520">

                        <input class="form-control searchfield" type="text" name="title" data-spy="affix" data-offset-top="520"  placeholder="Search....">
                        <span class="input-group-btn">

                    <button class="btn btn-primary">Search
                    </button>
                </span>

                    </form>
                </div>
            </div>
            <div class="row">
                <h1 class="cursive">Serify - Track Your Series

                </h1>
                <button type="button" class="btn btn-slider" data-toggle="modal" data-target="#login">Log In</button>
                <div id="login" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Login</h4>
                            </div>
                            <div class="modal-body">
                                <form action="/login/check" method="post">
                                    <div class="form-group">
                                        <label for="email">Email address:</label>
                                        <input type="email" class="form-control" name="email" id="email">
                                    </div>
                                    <div class="form-group">
                                        <label for="pwd">Password:</label>
                                        <input type="password" class="form-control" name="password" id="pwd">
                                    </div>

                                    <button type="submit" class="btn btn-default">Submit</button>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
                <button type="button" class="btn btn-slider" data-toggle="modal" data-target="#register">Or Register</button>
                <div id="register" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Register</h4>
                            </div>
                            <div class="modal-body">
                                <form action="/login/register" method="post">
                                    <div class="form-group">
                                        <label for="email">Username:</label>
                                        <input class="form-control" name="username" type="text" required id="un" />
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Email address:</label>
                                        <input type="email" class="form-control" name="email" id="email">
                                    </div>
                                    <div class="form-group">
                                        <label for="pwd">Password:</label>
                                        <input type="password" class="form-control" name="password" id="pwd">
                                    </div>

                                    <button type="submit" class="btn btn-default">Submit</button>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="container">
        <div class="row popular-series">
            <div class="col-sm-10 col-sm-offset-1 popular-series-box">
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                Most Popular
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
            </div>
            <div class="col-sm-12 owl-carousel">
                <% popular["results"].forEach(function(serie){ %>
                <div class="series-slide">
                    <a href="/serie/<%= serie["id"] %>">
                        <span class="popular-series-icon glyphicon glyphicon-share"></span>
                        <img src="https://image.tmdb.org/t/p/w500<%= serie["poster_path"] %>">
                        <p><%= serie.name %></p>
                    </a>
                </div>
                <% }) %>
            </div>
            <div class="col-sm-10 col-sm-offset-1 popular-series-box">
                <h3>&nbsp;</h3>
            </div>
        </div>

        <div class="row popular-series mt">
            <div class="col-sm-10 col-sm-offset-1 popular-series-box">
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                Top Rated
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
            </div>
            <div class="col-sm-12 owl-carousel">

                <% topRated["results"].forEach(function(serie){ %>
