                    <a href="/serie/<%= serie["id"] %>">
                        <span class="popular-series-icon glyphicon glyphicon-share"></span>
                        <img src="https://image.tmdb.org/t/p/w500<%= serie["poster_path"] %>">
                        <p><%= serie.name %></p>
                    </a>
                </div>
                <% }) %>
            </div>
            <!--<div class="col-sm-10 col-sm-offset-1 popular-series-box">
                <h3>&nbsp;</h3>
            </div>-->
        </div>

        <div class="row popular-series mt">
            <div class="col-sm-10 col-sm-offset-1 popular-series-box">
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                Newly Series
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
            </div>
            <div class="col-sm-12 owl-carousel">
                <% discover["results"].forEach(function(serie){ %>
                <div class="series-slide">

                    <a href="/serie/<%= serie["id"] %>">
                        <span class="popular-series-icon glyphicon glyphicon-share"></span>
                        <img src="https://image.tmdb.org/t/p/w500<%= serie["poster_path"] %>">
                        <p><%= serie.name %></p>

                    </a>
                </div>
                <% }) %>
            </div>
           <!-- <div class="col-sm-10 col-sm-offset-1 popular-series-box">
                <h3>&nbsp;</h3>
            </div>-->
        </div>

    </div>
    <span id="goTop" class="hidden" data-spy="affix" data-offset-top="2">
    <a href="#top" class="well well-sm"  onclick="$('html,body').animate({scrollTop:0},'slow');return false;">
        <i class="glyphicon glyphicon-chevron-up"></i> Back to Top
    </a>

</div>


